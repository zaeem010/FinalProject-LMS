@model IEnumerable<FinalProject_LMS.ViewModels.UMessageView>
<div class=" jumbotron">
    @{
        ViewBag.Title = "Index";
    }

    <h2>Inbox</h2>

    <p>
        @Html.ActionLink("Send A Message", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.Label("From")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rubrik)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.SenderName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Rubrik)
                </td>



                <td>
                    @if (item.IsReaden == 0)
                {
                        @Html.ActionLink("Read", "Edit", new { id = item.Id }, new { @class = "my-class" })
                    }
                    else
                    {
                        @Html.ActionLink("Read", "Edit", new { id = item.Id })
                    }


                   
                </td>
            </tr>
        }

    </table>
</div>
@section Scripts {

    @Scripts.Render("~/bundles/message")
}
